---
const { imageUrl, title, description, link } = Astro.props;
---
<a href={link || '#'} class="block">
  <div class="bg-[#112240] rounded-2xl shadow-2xl overflow-hidden transform hover:-translate-y-3 transition-all duration-500 ease-out group border-2 border-transparent hover:border-brand-secondary/50 relative cursor-pointer">
    <div class="relative overflow-hidden">
      <img 
        src={imageUrl} 
        alt={`Image of ${title}`} 
        class="w-full h-64 md:h-72 object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-brand-background/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    </div>
    <div class="p-6 md:p-8">
      <h3 class="text-2xl md:text-3xl font-bold text-brand-text-secondary mb-3 group-hover:text-brand-secondary transition-colors duration-300">
        {title}
      </h3>
      <p class="text-brand-text-primary group-hover:text-brand-text-secondary transition-colors duration-300 leading-relaxed">
        {description}
      </p>
      <div class="mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <span class="inline-flex items-center gap-2 text-brand-secondary text-sm font-semibold">
          View Project
          <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </span>
      </div>
    </div>
  </div>
</a>
