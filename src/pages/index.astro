---
// Redirect to English by default, preserving hash for Netlify Identity tokens
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lewan Interior Design</title>
    <link rel="canonical" href="/en/">
    <style>
      body {
        font-family: system-ui, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        background: #1a1a1a;
        color: white;
      }
      .loading {
        text-align: center;
      }
    </style>
</head>
<body>
    <div class="loading">
      <p>Loading...</p>
    </div>
    
    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    
    <script>
      // Check for Netlify Identity tokens in hash
      const hash = window.location.hash;
      const hasToken = hash && (hash.includes('invite_token') || hash.includes('confirmation_token') || hash.includes('recovery_token') || hash.includes('access_token'));
      
      if (hasToken) {
        // If an invite/recovery token is present, take the user straight to the CMS page
        // where the Netlify Identity widget is already loaded.
        window.location.replace(`/admin/${hash}`);
      } else {
        // No token, redirect to /en/
        window.location.href = '/en/';
      }
    </script>
    
    <noscript>
      <meta http-equiv="refresh" content="0; url=/en/">
    </noscript>
</body>
</html>
