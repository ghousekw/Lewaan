---
interface Props {
  currentLang: 'en' | 'ar';
}

const { currentLang } = Astro.props;
const otherLang = currentLang === 'en' ? 'ar' : 'en';
const otherLangLabel = otherLang === 'en' ? 'English' : 'العربية';
---

<button
  id="language-toggle"
  class="language-toggle flex items-center gap-2 px-4 py-2 rounded-lg bg-brand-background/50 border border-brand-secondary/20 hover:border-brand-secondary/50 transition-all duration-300 text-brand-text-secondary hover:text-brand-secondary"
  data-current-lang={currentLang}
  aria-label={`Switch to ${otherLangLabel}`}
>
  <span class="text-sm font-semibold">{otherLangLabel}</span>
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
  </svg>
</button>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('language-toggle');
    if (toggle) {
      toggle.addEventListener('click', () => {
        const currentLang = toggle.getAttribute('data-current-lang');
        const newLang = currentLang === 'en' ? 'ar' : 'en';
        
        // Store preference
        localStorage.setItem('language', newLang);
        
        // Reload page with new language
        const url = new URL(window.location.href);
        url.searchParams.set('lang', newLang);
        window.location.href = url.toString();
      });
    }
  });
</script>

<style>
  .language-toggle {
    min-width: fit-content;
  }
</style>

