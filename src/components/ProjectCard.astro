---
const { imageUrl, title, description } = Astro.props;
---
<div class="bg-[#112240] rounded-lg shadow-2xl overflow-hidden transform hover:-translate-y-2 transition-transform duration-300 ease-in-out group border-2 border-transparent hover:border-brand-secondary">
  <img src={imageUrl} alt={`Image of ${title}`} class="w-full h-64 object-cover">
  <div class="p-6">
    <h3 class="text-2xl font-bold text-brand-text-secondary mb-2">{title}</h3>
    <p class="text-brand-text-primary group-hover:text-brand-secondary transition-colors duration-300">{description}</p>
  </div>
</div>
