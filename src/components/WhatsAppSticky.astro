---
import { getSiteSettings } from '../lib/content';

// Get WhatsApp settings
const settings = getSiteSettings();
const whatsappPhone = settings.whatsappPhone?.replace(/\D/g, '') || '965505277550';
const whatsappMessage = encodeURIComponent(settings.whatsappMessage || 'Hello, I am interested in your services.');
const whatsappLink = `https://wa.me/${whatsappPhone}?text=${whatsappMessage}`;
---

<a 
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Contact us on WhatsApp"
  class="whatsapp-sticky"
  title="Chat with us on WhatsApp"
>
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
    <path d="M13.601 2.326A7.85 7.85 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.9 7.9 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.9 7.9 0 0 0 13.6 2.326zM7.994 14.521a6.6 6.6 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.56 6.56 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592m3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.73.73 0 0 0-.529.247c-.182.198-.691.677-.691 1.654s.71 1.916.81 2.049c.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232"/>
  </svg>
</a>

<style>
  .whatsapp-sticky {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 56px;
    height: 56px;
    background-color: #25d366;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
    transition: all 0.3s ease;
    z-index: 999;
    text-decoration: none;
  }

  .whatsapp-sticky:hover {
    background-color: #20ba5a;
    box-shadow: 0 6px 16px rgba(37, 211, 102, 0.6);
    transform: scale(1.1);
  }

  .whatsapp-sticky:active {
    transform: scale(0.95);
  }

  @media (max-width: 640px) {
    .whatsapp-sticky {
      bottom: 15px;
      right: 15px;
      width: 50px;
      height: 50px;
    }

    .whatsapp-sticky svg {
      width: 22px;
      height: 22px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .whatsapp-sticky {
      transition: none;
    }

    .whatsapp-sticky:hover {
      transform: none;
    }

    .whatsapp-sticky:active {
      transform: none;
    }
  }
</style>
